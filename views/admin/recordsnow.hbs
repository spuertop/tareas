                        <th class="col-3" scope="col">Hora de inicio</th>
                    </tr>
                </thead>
                <tbody id="nowTable">
                    {{#each now}}
                    <tr>
                        <th scope="col">{{Nombre}}</th>
                        <td>{{#if last}}
                                {{last.cliente}}, {{last.descripcionServicio}}
                            {{else}}
                                Inactivo
                            {{/if}}
                        </td>
                        <td>{{#if last}}
                                {{last.horaInicio}}
                            {{else}}
                                --
                            {{/if}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
