            <div class="tab-content" id="nav-tabContent">
                {{!-- tab1-now --}}
                <div class="tab-pane fade" id="tab1-now" role="tabpanel">
                    <table class="table table-hover table-bordered bg-light text-left">
                        <thead class="table-dark">
                            <tr>
                                <th class="col-2" scope="col">Empleado</th>
                                <th class="col-2" scope="col">Tarea</th>
                                <th class="col-2" scope="col">Hora de inicio</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each now}}
                            <tr>
                                <th scope="col">{{Nombre}} ({{Usuario}})</th>
                                <td>{{#if last}}
                                        {{last.cliente}}, {{last.descripcionServicio}}
