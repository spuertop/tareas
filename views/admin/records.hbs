                                <th class="col-2" scope="col">Horas</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each last}}
                            <tr>
                                <th scope="col">{{nombreUsuario}} ({{codigoUsuario}})</th>
                                <td>{{cliente}}</td> 
                                <td>{{descripcionServicio}}</td>
                                <td>{{horaInicio}} - {{horaFin}}</td>
                                <td>{{duracion}}</td>
                                <td>{{id}}</td>
